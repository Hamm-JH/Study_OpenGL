{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "G++ Build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${workspaceFolder}/src/main.cpp",
                "${workspaceFolder}/src/glad.c",
                "-o",
                "${workspaceFolder}/build/OpenGLTutorial.exe",
                "-I${workspaceFolder}/include",
                "-L${workspaceFolder}/lib",
                "-lglfw3",
                "-lopengl32",
                "-lgdi32",
                "-static-libgcc",
                "-static-libstdc++"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "${workspaceFolder}/build/OpenGLTutorial.exe",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "dependsOn": [
                "G++ Build"
            ],
            "problemMatcher": []
        },
        {
            "label": "CMake Configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B",
                "${workspaceFolder}/build",
                "-G",
                "MinGW Makefiles"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "CMake Build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": [
                "CMake Configure"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}